<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.rhathe.monstertipper">

	<application
		android:allowBackup="true"
		android:icon="@drawable/monster_default"
		android:label="@string/app_name"
		android:roundIcon="@drawable/monster_default"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".ui.Main"
			android:windowSoftInputMode="stateAlwaysHidden"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.TipperDetailActivity"
			android:label="@string/title_activity_tipper_detail"
			android:theme="@style/AppTheme.NoActionBar">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.rhathe.monstertipper.ui.Main"/>
		</activity>
		<activity
			android:name=".ui.ConsumableDetailActivity"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity android:name=".ui.PreferencesActivity">
		</activity>
	</application>

</manifest>
